@model Matjary.Models.Categories

@{
    ViewData["Title"] = "تعديل الفئة";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}



<!--Start Page Content-->
<div class="page-content">
    <div class="container-fluid">
        <div class="page-title">
            <i class="fa fa-cog"></i>
            <h6>الفئات</h6>
            <i class="fa fa-angle-left"></i>
            <h6>تعديل معلومات الفئة</h6>
        </div>
        <div class="page-info shadow">
            <div class="title">
                <i class="fa fa-cog"></i>
                <h6>تعديل معلومات الفئة</h6>
            </div>
            <div class="content">
                <form asp-route-id="@Model.Id" asp-action="EditCategory">
                    <!--Add Form Details Here-->
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-form-label">الفئة :</label>
                                <div class="col-md-9 col-sm-12">
                                    <input type="text" class="form-control" asp-for="CategoryName">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="submit-btn">
                        <button type="submit" class="btn">تحديث المعلومات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--End Page Content-->

@section scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}