@model IEnumerable<Matjary.Models.Quotations>

@{
    ViewData["Title"] = "قائمة عروض الاسعار";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
    ViewData["currentpage"] = "Index";
}

<!--Start Page Content-->
<div class="page-content">
    <div class="container-fluid">
        <div class="page-title">
            <i class="fa fa-layer-group"></i>
            <h6>عروض الاسعار</h6>
            <i class="fa fa-angle-left"></i>
            <h6>قائمة عروض الاسعار</h6>
        </div>
        <div class="page-info shadow">
            <div class="title">
                <i class="fa fa-layer-group"></i>
                <h6>قائمة عروض الاسعار</h6>
            </div>
            <div class="content">
                <div class="before-table">
                    <div class="add-button">
                        <a class="btn" asp-action="Create">
                            <i class="fa fa-plus"></i>
                            اضف عرض سعر
                        </a>
                    </div>
                    <div class="search-form">
                        <form action="" method="">
                            <!--Add Form Details Here-->
                            <select class="custom-select mr-sm-2" name="">
                                <option selected="">بحث بحسب</option>
                                <option value="">رقم عرض السعر</option>
                            </select>
                            <input type="text" class="form-control" name="">
                            <input type="submit" class="btn ml-sm-2" value="بحث">
                        </form>
                    </div>
                </div>
                <div class="table-info">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>اسم العميل</th>
                                <th>التاريخ</th>
                                <th>الحالة</th>
                                <th>عمليات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                var x = 0;
                                
                            }
                            @foreach (var item in Model)
                            {
                                x++;
                                <tr>
                                    <td>@x</td>
                                    <td>@item.Person.Name</td>
                                    <td>@item.Date</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a href="#"><i class="fa fa-print fa-fw op"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye fa-fw op"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit fa-fw op"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('هل انت متأكد')"><i class="fa fa-trash fa-fw op"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="pagin">
                    <!--Put Pagination ASP CORE Here-->
                    <partial name="_Pager" />
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Page Content-->
