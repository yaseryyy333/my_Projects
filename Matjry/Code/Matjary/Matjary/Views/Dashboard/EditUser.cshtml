@model Matjary.Models.ApplicationUser
@{
    ViewData["Title"] = "تعديل المعلومات الشخصية";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}

<!--Start Page Content-->
<div class="page-content">
    <div class="container-fluid">
        <div class="page-info shadow">
            <div class="title">
                <i class="fa fa-user"></i>
                <h6>تعديل الملف الشخصي</h6>
            </div>
            <div class="content">
                <form asp-action="EditUser" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="@Model.Id" />
                    <input type="hidden" asp-for="@Model.Email" />
                    <!--Add Form Details Here-->
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-form-label">الاسم :</label>
                                <div class="col-md-9 col-sm-12">
                                    <input type="text" class="form-control" asp-for="@Model.Name">
                                    <input type="hidden" class="form-control" asp-for="@Model.UserName">
                                    <input type="hidden" class="form-control" asp-for="@Model.PasswordHash">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-form-label">كلمة المرور :</label>
                                <div class="col-md-9 col-sm-12">
                                    <input type="password" class="form-control" asp-for="@Model.PasswordHash">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-form-label">رقم الجوال :</label>
                                <div class="col-md-9 col-sm-12">
                                    <input type="text" class="form-control" asp-for="@Model.PhoneNumber">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">الصورة الشخصية :</label>
                                <div class="col-sm-8">
                                    <input type="file" class="form-control" asp-for="@Model.File">
                                </div>
                            </div>
                        </div>
                        @if (Model.Photo != null)
                        {
                            <div class="col-md-6 col-sm-12">
                                <img src="~/Dashboard/img/Users/@Model.Photo" alt="User Photo" class="owner-image">
                            </div>
                        }
                    </div>
                    <div class="submit-btn">
                        <button type="submit" class="btn">تحديث المعلومات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--End Page Content-->
