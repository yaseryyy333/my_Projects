@model Matjary.Models.Persons

@{
    ViewData["Title"] = "تعديل معلومات المورد";
    Layout = "~/Views/Shared/_dashboardLayout.cshtml";
}


<!--Start Page Content-->
<div class="page-content">
    <div class="container-fluid">
        <div class="page-info shadow">
            <div class="title">
                <i class="fa fa-user"></i>
                <h6>تعديل معلومات المورد</h6>
            </div>
            <div class="content">
                <form asp-action="Edit" asp-route-id="@Model.Id">
                    <!--Add Form Details Here-->
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-form-label"> اسم المورد :</label>
                                <div class="col-md-9 col-sm-12">
                                    <input asp-for="Name" type="text" class="form-control">
                                    <span asp-validation-for="Name" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-form-label">الإميل  :</label>
                                <div class="col-md-9 col-sm-12">
                                    <input type="email" class="form-control" asp-for="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-form-label">رقم الهاتف :</label>
                                <div class="col-md-9 col-sm-12">
                                    <input type="text" class="form-control" asp-for="Telephone">
                                    <span asp-validation-for="Telephone" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-form-label">رقم الجوال :</label>
                                <div class="col-md-9 col-sm-12">
                                    <input type="text" class="form-control" asp-for="Mobile">
                                    <span asp-validation-for="Mobile" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-sm-12 col-form-label">العنوان :</label>
                                <div class="col-md-9 col-sm-12">
                                    <input type="text" class="form-control" asp-for="Address">
                                    <span asp-validation-for="Address" class="text-danger"></span>



                                    <input type="hidden" class="form-control" asp-for="Date">
                                    <input type="hidden" class="form-control" asp-for="Note">
                                    <input type="hidden" class="form-control" asp-for="Type">


                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="submit-btn">
                        <button type="submit" class="btn">تحديث المعلومات</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--End Page Content-->

@section scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}